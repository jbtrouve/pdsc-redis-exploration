. ./set-site-parameters $*

ENDPOINT=$(kubectl get redb/redis-enterprise-database -o yaml | grep host: | awk '{print $NF}')
PORT=$(kubectl get redb/redis-enterprise-database -o yaml | grep port: | awk '{print $NF}')
PASS=$(kubectl get secret redb-redis-enterprise-database -o jsonpath="{.data.password}" | base64 --decode)
echo -e "\n\n"

echo "kubectl exec -it rec-$SITE-0 -- redis-cli -h $ENDPOINT -p $PORT -a $PASS PING"

IP=$(kubectl get service/ingress-nginx-controller -o yaml -n ingress-nginx | grep ip: | awk '{print $NF}')
U=$(kubectl get secret rec-$SITE -o jsonpath='{.data.username}' | base64 --decode)
P=$(kubectl get secret rec-$SITE -o jsonpath='{.data.password}' | base64 --decode)

echo "curl -k https://api.$SITE.$IP.nip.io/v1/bdbs -u \"$U:$P\" -H \"Content-Type: application/json\" | jq '.[]'"

