POD_NUM=$1
SITE=r1

[[ $POD_NUM = "" ]] && echo "Usage: $0 _pod_" && kubectl get pods && exit 1

IP=$(kubectl exec -it rec-r1-0 -- rladmin status nodes | awk '$1 ~ /node:2/ {print $3}')
kubectl get pods -o json | jq -r '.items[] | select(.status.podIP == "10.0.0.5").metadata.name
NODE=$(kubectl get pod/rec-$SITE-$POD_NUM -o json | jq -r '.spec.nodeName')

set -x
kubectl drain $NODE --ignore-daemonsets --delete-emptydir-data

